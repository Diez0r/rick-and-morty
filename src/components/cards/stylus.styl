.preview-card
  background-color #fff
  box-sizing border-box
  border solid 2px #000
  box-shadow 0 6px 6px -6px #000
  display inline-block
  flex 1 1
  width 100%
  max-width 100%
  overflow hidden
  position relative
  color $black
  &.character
    background-color $blue
  &.location
    background-color $green
  &.episode
    background-color $orange

  &__img-box
    position relative
    width 100%
    padding-top 100%

  &__img
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  &__description
    padding 20px 10px

  &__paragraph
    display -webkit-box
    overflow hidden
    -webkit-box-orient vertical
    -webkit-line-clamp 1
    font-size 20px
    text-overflow: ellipsis
    &:not(:first-of-type)
      margin-top 5px
    &.name
      height 45px
      -webkit-line-clamp 2

